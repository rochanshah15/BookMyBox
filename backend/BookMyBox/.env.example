# ================================================================
# BOOKMYBOX ENVIRONMENT VARIABLES TEMPLATE
# ================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ================================================================
# GOOGLE GEMINI API
# ================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your_gemini_api_key_here"

# ================================================================
# DJANGO SETTINGS
# ================================================================
# Set to False in production
DEBUG=True

# Generate a new secret key for production
# You can generate one at: https://djecrety.ir/
SECRET_KEY="your_django_secret_key_here"

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
# For SQLite (default development)
DATABASE_URL="sqlite:///db.sqlite3"

# For PostgreSQL (production example)
# DATABASE_URL="postgresql://username:password@localhost:5432/bookmybox"

